@model IEnumerable<BTL_LTW.Data.BaiViet>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<section class="breadcrumb-blog set-bg" data-setbg="~/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Our Blog</h2>
            </div>
        </div>
    </div>
</section>

<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                var imageUrl = Url.Content(item.AnhBia ?? "~/img/blog/blog-1.jpg");

                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@imageUrl" alt="@item.TieuDe"
                                 style="width:100%;height:260px;object-fit:cover;border-radius:10px;" />
                        </div>

                        <div class="blog__item__text">
                            <span>
                                <img src="~/img/icon/calendar.png" alt="">
                                @(item.NgayDang?.ToString("dd MMMM yyyy"))
                            </span>
                            <h5>@item.TieuDe</h5>
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.MaBv">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
