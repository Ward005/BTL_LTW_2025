@model IEnumerable<BTL_LTW.ViewModels.ProductVM>

@{
    var products = Model.ToList();
}

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Hàng bán chạy</li>
                    <li data-filter=".new-arrivals">Sản phẩm mới</li>
                    <li data-filter=".hot-sales">Giảm giá</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @for (var i = 0; i < products.Count(); i++)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix @(i % 2 == 0 ? "new-arrivals" : "hot-sales")">
                    @Html.Partial("_ProductItem", products[i])
                </div>
            }
        </div>
    </div>
</section>
<!-- Product Section End -->