@{
    ViewBag.Title = "Chuyên mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
    </div>

    <div class="card-body table-responsive">
        <table id="items" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên danh mục</th>
                    <th>Mô tả</th>
                    <th>Công cụ</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h4 class="modal-title">Thêm / Cập nhật chuyên mục</h4>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Item">
                    <input type="hidden" id="MaDanhMuc" name="MaDanhMuc" />
                    <div class="form-group">
                        <label for="TenDanhMuc">Tên chuyên mục</label>
                        <input type="text" class="form-control" id="TenDanhMuc" name="TenDanhMuc" placeholder="Nhập tên chuyên mục" />
                    </div>
                    <div class="form-group">
                        <label for="MoTa">Mô tả</label>
                        <textarea class="form-control" id="MoTa" name="MoTa" placeholder="Nhập mô tả"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary btnSave">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Css {
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <style>
        div.dataTables_wrapper .row:first-child {
            align-items: center;
        }

        div.dt-buttons {
            margin-left: auto;
        }
        /* Đưa ô search sát phải và ở dưới nút thêm mới */
        div.dataTables_filter {
            text-align: right;
            margin-top: -10px;
        }
    </style>
}

@section Js {
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>

    <script>
        $(function () {
            var table = $("#items").DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/Admin/Category/GetList",
                    type: "POST",
                    dataType: "json"
                },
                // ✅ Layout: show entries (trái) + thêm mới (phải) + search ngay dưới phải
                dom: '<"row mb-2"<"col-md-6"l><"col-md-6 d-flex justify-content-end"B>>' +
                     '<"row mb-2"<"col-md-12 d-flex justify-content-end"f>>' +
                     'rtip',
                buttons: [
                    {
                        text: '<i class="fas fa-plus mr-2"></i> Thêm mới',
                        className: 'btn btn-primary',
                        action: function () {
                            $("#Item")[0].reset();
                            $("#MaDanhMuc").val("");
                            $("#modal-default").modal("show");
                        }
                    }
                ],
                columns: [
                    { data: null, render: (d, t, r, m) => m.row + 1 },
                    { data: "tenDanhMuc" },
                    { data: "moTa" },
                    {
                        render: function (data, type, row) {
                            return `
                                <div class="btn-group">
                                    <a href="#" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-toggle="dropdown">
                                        <i class="fas fa-cog"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item text-primary btnEdit" href="#" data-id="${row.maDanhMuc}">
                                            <i class="fas fa-pencil-alt"></i> Cập nhật
                                        </a>
                                        <a class="dropdown-item text-danger btnDelete" href="#" data-id="${row.maDanhMuc}">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </div>
                                </div>`;
                        }
                    }
                ]
            });

            // Lưu
            $(".btnSave").click(function () {
                $.ajax({
                    data: $("#Item").serialize(),
                    url: "/Admin/Category/Save",
                    type: "POST",
                    success: function () {
                        $("#modal-default").modal("hide");
                        toastr.success("Lưu chuyên mục thành công!");
                        table.ajax.reload();
                    },
                    error: function () {
                        toastr.error("Lưu thất bại!");
                    }
                });
            });

            // Sửa
            $(document).on("click", ".btnEdit", function () {
                let id = $(this).data("id");
                $.getJSON("/Admin/Category/GetItem", { id: id }, function (item) {
                    $("#MaDanhMuc").val(item.maDanhMuc);
                    $("#TenDanhMuc").val(item.tenDanhMuc);
                    $("#MoTa").val(item.moTa);
                    $("#modal-default").modal("show");
                });
            });

            // Xóa
            $(document).on("click", ".btnDelete", function () {
                let id = $(this).data("id");
                Swal.fire({
                    title: "Bạn có chắc muốn xóa?",
                    text: "Hành động này không thể hoàn tác!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Xóa",
                    cancelButtonText: "Hủy"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.get("/Admin/Category/Delete", { id: id }, function (data) {
                            if (data) {
                                toastr.success("Đã xóa chuyên mục!");
                                table.ajax.reload();
                            } else {
                                toastr.error("Xóa thất bại!");
                            }
                        });
                    }
                });
            });
        });
    </script>
}
